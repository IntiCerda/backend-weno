generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  email String @unique
  name String @unique
  lastName String 
  password String
  
  requests  Requests[]
  services  Services[]
}

model Category{
  id String @id
  name String @default(uuid()) @unique

  services Services[]
}

model Booking{
  id String @id @default(uuid())
  date DateTime
  status Boolean //???

  requests Requests[]
}

model Review{
  id String @id @default(uuid())
  qualification Int
  comment String

  requests   Requests[]
}

model Requests{
  id         String    @id @default(uuid())
  user       User      @relation(fields: [id_user], references: [id])
  service    Services  @relation(fields: [id_service], references: [id])
  booking    Booking   @relation(fields: [id_booking], references: [id])
  review     Review    @relation(fields: [id_review], references: [id])
  
  id_user    String
  id_service String
  id_booking String
  id_review  String
}


model Services{
  id          String    @id @default(uuid())
  category    Category  @relation(fields: [category_name], references: [name])
  user        User      @relation(fields: [id_user], references: [id])

  name        String
  description String
  id_user String
  category_name String
  price       Int

  requests  Requests[]
}